package br.com.fiap.tds;

import java.util.Scanner;

public class LeituraDeDados {

	public static void main(String[] args) {

		int idade = 0;

		Scanner sc = new Scanner (System.in);
		System.out.print("Por favor, informe seu nome: ");
		String nome = sc.nextLine();
		System.out.print("Agora, informe sua idade: ");
		idade = sc.nextInt();

		if (idade < 0) {
			System.out.println(nome + " esta idade é inválida");
		} else if (idade >= 18 && idade < 70) {
			System.out.println(nome + " você é maior de idade");
		} else if (idade >= 70) {
			if (idade >= 100) {
				System.out.println(nome + " você já é um centenário");
			} else {
				System.out.println(nome + " você está na terceira idede ou também conhecida como melhor idade");
			}
		} else {
				System.out.println("Menor idade");
			}
		}
	}
